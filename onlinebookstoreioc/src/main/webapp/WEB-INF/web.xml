<?xml version="1.0" encoding="UTF-8"?>


<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">
    <servlet>
        <servlet-name>BookRegistrationServlet</servlet-name>
        <servlet-class>com.itsc.onlinebookstore.BookRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookRegistrationServlet</servlet-name>
        <url-pattern>/BookRegistrationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DisplayBooksServlet</servlet-name>
        <servlet-class>com.itsc.onlinebookstore.DisplayBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayBooksServlet</servlet-name>
        <url-pattern>/DisplayBooksServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBook</servlet-name>
        <servlet-class>com.itsc.onlinebookstore.DeleteBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBook</servlet-name>
        <url-pattern>/DeleteBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchBooksServlet</servlet-name>
        <servlet-class>com.itsc.onlinebookstore.SearchBooksServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBooksServlet</servlet-name>
        <url-pattern>/SearchBooksServlet</url-pattern>
    </servlet-mapping>
</web-app>